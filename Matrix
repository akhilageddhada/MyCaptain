 #include <stdio.h>
void main()
{
  int arr1[3][3],i,j;
  int sum=0;
  
       printf("Input elements in the matrix :");
       
  for(i=0;i<3;i++)
  { printf("\n");
      for(j=0;j<3;j++)
      {
	      printf("\nelement - [%d],[%d] : ",i,j);
	      scanf("%d",&arr1[i][j]);
      }
  }  
 
 printf("\nThe matrix is : \n");
  for(i=0;i<3;i++)
  {
      printf("\n");
      for(j=0;j<3;j++)
           printf("%d\t",arr1[i][j]);
  }
  
 
 for(i=0;i<3;i++)
 {
    sum=sum+arr1[i][i];
       
 }
   printf("\nsum of diagonal elements=%d",sum);
 }
